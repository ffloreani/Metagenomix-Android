<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metagenomix.android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MetagenomixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.ResultsActivity"/>
        <activity android:name=".activities.GraphActivity" />
        <activity android:name=".activities.HistoryActivity" />
        <activity android:name=".activities.LoadDataActivity"
            android:parentActivityName=".activities.StartActivity"/>
        <activity android:name=".activities.ConversionActivity" />
    </application>

</manifest>