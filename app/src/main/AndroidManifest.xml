<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.metagenomix.android">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.metagenomix.android.MetagenomixApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.metagenomix.android.activities.LoadDataActivity"
            android:label="LoadDataActivity" >
        </activity>
        <activity
            android:name="com.metagenomix.android.activities.GraphActivity"
            android:label="GraphActivity" >
        </activity>
        <activity
            android:name="com.metagenomix.android.activities.HistoryActivity"
            android:label="HistoryActivity" >
        </activity>
    </application>

</manifest>